<p id="notice"><%= notice %></p>

<h1><%= t"global.country.countries_list" %></h1>
<%= link_to 'New Country', new_country_path, class:"btn btn-primary" %>

<table class="table table-striped table-bordered table-hover table-sm">
  <thead class="thead-dark">
    <tr>
      <th>Continent</th>
      <th>Country en</th>
      <th>Country pl</th>
      <th>Capital city</th>
      <th>Alfa 2</th>
      <th>Alfa 3</th>
      <th>Numeric code</th>
      <th>Iso code</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
      <tr>
        <td><%= country.continent %></td>
        <td><%= country.country_en %></td>
        <td><%= country.country_pl %></td>
        <td><%= country.capital_city %></td>
        <td><%= country.alfa_2 %></td>
        <td><%= country.alfa_3 %></td>
        <td><%= country.numeric_code %></td>
        <td><%= country.iso_code %></td>
        <td><%= link_to 'Show', country, class:"btn btn-info btn-sm" %></td>
        <td><%= link_to 'Edit', edit_country_path(country), class:"btn btn-primary btn-sm" %></td>
        <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


